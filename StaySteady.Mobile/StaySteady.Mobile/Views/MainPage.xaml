<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="StaySteady.Mobile.Views.MainPage" BackgroundColor="White" Title="Stay Steady">
  <ContentPage.Content>
    <StackLayout Orientation="Vertical"   HorizontalOptions="FillAndExpand">
      <Label Text="What do you want to do?"
           Font="Large"
           HorizontalOptions="Center"
            />
      <Button Text="View Daily Activity" Clicked="GoElder" ></Button>
      <Button Text="View Summary" Clicked="GoDoctor"></Button>
      <Button Text="View Daily Report"  Clicked="GoRelative"></Button>
      <Button Text="Fall detection"  Clicked="Button_OnClicked"></Button>
      <Button Text="Add exercise reminder"  Clicked="AddReminderButton_Clicked"></Button>
      <Button Text="View Exercises"   Clicked="Tutorial_Clicked"></Button>
      <Button Text="Book appointment"  Clicked="BookAppointment_OnClicked"></Button>
    </StackLayout>
  </ContentPage.Content>
</ContentPage>