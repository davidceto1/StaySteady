<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="StaySteady.Mobile.Views.MainPage">
  <ContentPage.Content>
    <StackLayout Orientation="Vertical"   >
      <Label Text="What do you want to do?"
           Font="Large"
           HorizontalOptions="Center"
            />
      <Button Text="View Daily Activity" HorizontalOptions="Center" Clicked="GoElder" ></Button>
      <Button Text="View Summary" HorizontalOptions="Center" Clicked="GoDoctor"></Button>
      <Button Text="View Daily Report" HorizontalOptions="Center"  Clicked="GoRelative"></Button>
      <Button Text="Fall detection" HorizontalOptions="Center"  Clicked="Button_OnClicked"></Button>
      <Button Text="Add exercise reminder" HorizontalOptions="Center"  Clicked="AddReminderButton_Clicked"></Button>
      <Button Text="View Excercises" HorizontalOptions="Center"  Clicked="Tutorial_Clicked"></Button>
    </StackLayout>
  </ContentPage.Content>
</ContentPage>