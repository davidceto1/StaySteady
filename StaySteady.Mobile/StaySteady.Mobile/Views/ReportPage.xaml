<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="StaySteady.Mobile.Views.ReportPage" Title = "Daily Report">

<ContentPage.Padding>
		<OnPlatform x:TypeArguments="Thickness"
					iOS="0, 20, 0, 0" />
</ContentPage.Padding>

 <Grid
		RowSpacing="1"
    	ColumnSpacing="0"
				>
			
    <Grid.RowDefinitions>
<!--      <RowDefinition Height="15*" />-->
      <RowDefinition Height="3*" />
	  <RowDefinition Height="3*" />		
      <RowDefinition Height="3*" />
      <RowDefinition Height="3*" />
	  <RowDefinition Height="3*" />
	  <RowDefinition Height="3*" />		
      <RowDefinition Height="3*" />
      <RowDefinition Height="3*" />
	  <RowDefinition Height="3*" />
	  <RowDefinition Height="3*" />
	  <RowDefinition Height="5*" />
	  <RowDefinition Height="10*" />
    </Grid.RowDefinitions>

    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="*" />
      <ColumnDefinition Width="*" />
	  <ColumnDefinition Width="*" />
      <ColumnDefinition Width="*" />
    </Grid.ColumnDefinitions>

	
			
<!--		<Label Text=""
           Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="4"
           FontSize="30"
           TextColor="#54211d"
           XAlign="Center"
           YAlign="Center"/>-->

		<Label Text="Risk of Fall"
		   BackgroundColor = "#BDC3C7"
           Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2"
		   FontAttributes = "Bold"
           FontSize="20"
		   TextColor="#2C3E50"		
           XAlign="Center"
           YAlign="Center"/>

		<Label Text="{Binding Risk,StringFormat='{0}'}"
		   BackgroundColor = "#ECF0F1"
           Grid.Row="1" Grid.Column="2" Grid.ColumnSpan="2"
           FontSize="20"
		   TextColor="#34495E"
           XAlign="Center"
           YAlign="Center"/>
			
		<Label Text="LastUpdate"
		   BackgroundColor = "#BDC3C7"
           Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2"
           FontAttributes = "Bold"
           FontSize="20"
		   TextColor="#2C3E50"
           XAlign="Center"
           YAlign="Center"/>

		<Label Text="{Binding LastUpdate,StringFormat='{0:G}'}"
		   BackgroundColor = "#ECF0F1"
           Grid.Row="2" Grid.Column="2" Grid.ColumnSpan="2"
           FontSize="15"
		   TextColor="#2C3E50"
           XAlign="Center"
           YAlign="Center"/>
			

		<Label Text="Patient name"
		   BackgroundColor = "#BDC3C7"
           Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2"
		   FontAttributes = "Bold"
           FontSize="20"
		   TextColor="#2C3E50"		
           XAlign="Center"
           YAlign="Center"/>

		<Label x:Name = "patientName"
			Text = "{Binding Name, StringFormat='{0}',Mode=TwoWay}"
		   BackgroundColor = "#ECF0F1"
           Grid.Row="3" Grid.Column="2" Grid.ColumnSpan="2"
           FontSize="20"
		   TextColor="#2C3E50"
           XAlign="Center"
           YAlign="Center"/>
			
		<Label Text="Age"
		   BackgroundColor = "#BDC3C7"
           Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2"
           FontAttributes = "Bold"
           FontSize="20"
		   TextColor="#2C3E50"
           XAlign="Center"
           YAlign="Center"/>

		<Label Text="{Binding Age,StringFormat='{0}'}"
		   BackgroundColor = "#ECF0F1"
           Grid.Row="4" Grid.Column="2" Grid.ColumnSpan="2"
           FontSize="20"
		   TextColor="#2C3E50"
           XAlign="Center"
           YAlign="Center"/>

		<Label Text="Stability Rate"
		   BackgroundColor = "#BDC3C7"
           Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="2"
		   FontAttributes = "Bold"
           FontSize="20"
		   TextColor="#2C3E50"		
           XAlign="Center"
           YAlign="Center"/>

		<Label Text="{Binding Stability,StringFormat='{0}'}"
		   BackgroundColor = "#ECF0F1"
           Grid.Row="5" Grid.Column="2" Grid.ColumnSpan="2"
           FontSize="20"
		   TextColor="#2C3E50"
           XAlign="Center"
           YAlign="Center"/>
			
		<Label Text="Temperature"
		   BackgroundColor = "#BDC3C7"
           Grid.Row="6" Grid.Column="0" Grid.ColumnSpan="2"
           FontAttributes = "Bold"
           FontSize="20"
		   TextColor="#2C3E50"
           XAlign="Center"
           YAlign="Center"/>

		<Label Text="{Binding Temperature,StringFormat='{0}'}"
		   BackgroundColor = "#ECF0F1"
           Grid.Row="6" Grid.Column="2" Grid.ColumnSpan="2"
           FontSize="20"
		   TextColor="#2C3E50"
           XAlign="Center"
           YAlign="Center"/>

		<Label Text="Heart Rate"
		   BackgroundColor = "#BDC3C7"
           Grid.Row="7" Grid.Column="0" Grid.ColumnSpan="2"
		   FontAttributes = "Bold"
           FontSize="20"
		   TextColor="#2C3E50"		
           XAlign="Center"
           YAlign="Center"/>

		<Label Text="{Binding HeartRate,StringFormat='{0}'}"
		   BackgroundColor = "#ECF0F1"
           Grid.Row="7" Grid.Column="2" Grid.ColumnSpan="2"
           FontSize="20"
		   TextColor="#2C3E50"
           XAlign="Center"
           YAlign="Center"/>
			
		<Label Text="Obervations"
		   BackgroundColor = "#BDC3C7"
           Grid.Row="8" Grid.Column="0" Grid.ColumnSpan="2"
           FontAttributes = "Bold"
           FontSize="20"
		   TextColor="#2C3E50"
           XAlign="Center"
           YAlign="Center"/>

		<Label Text="Previous falls"
		   BackgroundColor = "#ECF0F1"
		  
           Grid.Row="8" Grid.Column="2" Grid.ColumnSpan="2"
           FontSize="20"
		   TextColor="#2C3E50"
           XAlign="Center"
           YAlign="Center"/>

         <Label Text=" "
		   Grid.Row="9" Grid.Column="0" Grid.ColumnSpan="4"
           FontSize="20"
           XAlign="Center"
           YAlign="Center"/>
			
    	<Button Text="Book Appointment "
            Grid.Row="10" Grid.Column="1" Grid.ColumnSpan="2"
			BackgroundColor = "#2C3E50"
			FontSize="18"
			BorderWidth = "1"
           	TextColor="White"
			WidthRequest = "200"
				/>

		  
			
	</Grid>

</ContentPage>